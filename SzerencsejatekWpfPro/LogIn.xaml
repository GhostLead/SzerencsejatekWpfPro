<Page x:Class="SzerencsejatekWpfPro.LogIn"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SzerencsejatekWpfPro"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LogIn">

    <Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Label Content="Username" Foreground="Black" Margin="0,0,0,-5"/>
            <TextBox Width="200" x:Name="txtUsername" Height="25" Margin="0,0,0,0"/>
            <Label Content="Password" Foreground="Black" Margin="0,0,0,-5"/>
            <PasswordBox Width="200" x:Name="passPassword" Height="25"/>
            <Button Width="110" x:Name="btnBejelentkezes" Height="30" Margin="0,20,0,0" Content="Bejelentkezés" Click="btnBejelentkezes_Click"/>
        </StackPanel>
        
    </Grid>
</Page>
